<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/activity_main_header"
        layout="@layout/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/activity_main_top_menu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/main_top_menu1_on"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/activity_main_top_menu2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/main_top_menu2_off"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/activity_main_top_menu3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/main_top_menu3_off"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/activity_main_top_menu4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/main_top_menu4_off"/>
        </LinearLayout>

        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/main_bottom_menu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/main_bottom_menu1_on"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/main_bottom_menu2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/main_bottom_menu2_off"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/main_bottom_menu3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/main_bottom_menu3_off"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>