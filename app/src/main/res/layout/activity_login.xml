<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/login_text_name" />

            <EditText
                android:id="@+id/login_edit_name"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/login_text_age" />
            <EditText
                android:id="@+id/login_edit_age"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_text_time2"/>
            <EditText
                android:id="@+id/login_edit_time"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:padding="5dp"
                android:inputType="datetime"
                android:layout_gravity="right"
                android:textColor="@color/colorBlack"
                android:background="@drawable/back" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_start_btn"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_start_btn" />

</LinearLayout>